<% if current_user %>
<section class="welcome">
  <h1 class="center-align">Welcome <%= current_user.username %>!</h1>
</section>
  <section class="col s12 m6 l3 center-align">
    <p>
      <img class="circle responsive-img z-depth-5 hide-on-small-only" src=<%= "#{current_user.avatar}" %>>
    </p>
  </section>
    <section class="col-6 center-align">
      <ul>
        <h4>
          <div class="btn home">
            <li>Followers: <%= "#{@user.followers}" %></li>
          </div><br>
          <div class="btn home">
            <li>Users Following: <%= "#{@user.following}" %></li>
          </div><br>
          <div class="btn home">
            <li><%= link_to(repos_path) do %>
              <span class="home">
                Public Repos Made: <%= "#{@user.public_repos}" %>
              </span>
              <% end %>
            </li>
          </div><br>
        </h4>
      </ul>
    </section>
<% else %>
    <header>
      <h4 class="center-align">
        Please log in above..
      </h4>
    </header>
    <section class="bottom col s12 m6 l3 center-align">
      <p class="login centered">
        <img class="login-img responsive_img" src= <%= image_path("murakamicat.png")%> />
      </p>
    </section>
<% end%>
